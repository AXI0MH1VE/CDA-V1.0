{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AxiomHive Assistant",
  "version": "1.0.0",
  "identifier": "co.axiomhive.assistant",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "app", "deb", "appimage"],
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../models/*"],
    "externalBin": []
  },
  "app": {
    "windows": [
      {
        "title": "AxiomHive Assistant",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  }
}
